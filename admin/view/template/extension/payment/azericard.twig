{{ header }}
{{ column_left }}

{% block content %}
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title }}</h1>
        </div>
    </div>

    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger">
                {{ error_warning }}
            </div>
        {% endif %}

        {% if success %}
            <div class="alert alert-success">
                {{ success }}
            </div>
        {% endif %}

        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment-azericard" class="form-horizontal">
            
            

            <div class="form-group">
                <label for="input-test-mode" class="col-sm-2 control-label">{{ entry_test_mode }}</label>
                <div class="col-sm-10">
                    <input type="checkbox" name="payment_azericard_test_mode" value="1" id="input-test-mode" {% if payment_azericard_test_mode == '1' %} checked="checked" {% endif %} />
                </div>
            </div>

            <div class="form-group">
                <label for="input-terminal" class="col-sm-2 control-label">{{ entry_terminal }}</label>
                <div class="col-sm-10">
                    <input type="text" name="payment_azericard_terminal" value="{{ payment_azericard_terminal }}" placeholder="{{ entry_terminal }}" id="input-terminal" class="form-control" />
                    {% if error_terminal %}
                        <div class="text-danger">{{ error_terminal }}</div>
                    {% endif %}
                </div>
            </div>


            <div class="form-group">
                <label for="input-url" class="col-sm-2 control-label">{{ entry_url }}</label>
                <div class="col-sm-10">
                    <input type="text" name="payment_azericard_url" value="{{ payment_azericard_url }}" placeholder="{{ entry_url }}" id="input-url" class="form-control" />
                    {% if error_url %}
                        <div class="text-danger">{{ error_url }}</div>
                    {% endif %}
                </div>
            </div>


            <div class="form-group">
                <label for="input-email" class="col-sm-2 control-label">{{ entry_email }}</label>
                <div class="col-sm-10">
                    <input type="text" name="payment_azericard_email" value="{{ payment_azericard_email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
                    {% if error_email %}
                        <div class="text-danger">{{ error_email }}</div>
                    {% endif %}
                </div>
            </div>

   
            <!-- Active/Inactive Switch -->
            <div class="form-group">
                <label for="input-status" class="col-sm-2 control-label">{{ entry_status }}</label>
                <div class="col-sm-10">
                    <select name="payment_azericard_status" id="input-status" class="form-control">
                        <option value="1" {% if payment_azericard_status == '1' %} selected="selected" {% endif %}>{{ text_enabled }}</option>
                        <option value="0" {% if payment_azericard_status == '0' %} selected="selected" {% endif %}>{{ text_disabled }}</option>
                    </select>
                    {% if error_status %}
                        <div class="text-danger">{{ error_status }}</div>
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">{{ button_save }}</button>
                </div>
            </div>
        </form>
    </div>
    <style>




    </style>
{% endblock %}

{{ footer }}
